@article{loufAmericanCulturalRegions2023,
  title = {American Cultural Regions Mapped through the Lexical Analysis of Social Media},
  author = {Louf, Thomas and Gon{\c c}alves, Bruno and Ramasco, Jos{\'e} J. and S{\'a}nchez, David and Grieve, Jack},
